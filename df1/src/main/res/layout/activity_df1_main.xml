<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.nathaniel.df1.CustomImageViewWithLabel
        android:id="@+id/custom_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/button_set_random_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_set_random_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_text_random_image"
        app:layout_constraintBottom_toTopOf="@id/button_set_icon_update_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/custom_image_view"/>

    <Button
        android:id="@+id/button_set_icon_update_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_text_update_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_set_random_image"/>
</androidx.constraintlayout.widget.ConstraintLayout>